loss <- function(p) {
l1 <- 8*p - 5*(1-p)
l2 <- 2*p + 6*(1-p)
df <- data.frame(p, l1, l2)
return(df)
}
p <- seq(0, 1, 0.05)
l <- loss(p) %>%
gather(loss, amount, l1:l2)
l
